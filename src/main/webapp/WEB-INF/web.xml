<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>chatServlet</servlet-name>
		<servlet-class>com.ryannadams.cheeonk.server.ChatServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>jUnitHostImpl</servlet-name>
		<servlet-class>com.google.gwt.junit.server.JUnitHostImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>chatServlet</servlet-name>
		<url-pattern>/cheeonk/chat</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jUnitHostImpl</servlet-name>
		<url-pattern>/cheeonk/junithost/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>chatServlet</servlet-name>
		<url-pattern>/com.ryannadams.cheeonk.cheeonkJUnit/cheeonk/chat</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>jUnitHostImpl</servlet-name>
		<url-pattern>/com.ryannadams.cheeonk.cheeonkJUnit/junithost/*</url-pattern>
	</servlet-mapping>



	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>cheeonk.html</welcome-file>
	</welcome-file-list>

</web-app>
